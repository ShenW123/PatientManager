<p id="notice"><%= notice %></p>

<h1>PatientManager | PatientList </h1>

<%= link_to 'New Patient', new_patient_path, :class => "btn btn-primary" %>

<br><br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Mrn</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Actions</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.MRN %></td>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= link_to 'Show', patient, :class => "btn btn-default" %> | 
        <%= link_to 'Edit', edit_patient_path(patient), :class => "btn btn-warning" %> | 
        <%= link_to 'Destroy', patient, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


