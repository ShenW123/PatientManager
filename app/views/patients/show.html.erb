<p id="notice"><%= notice %></p>

<h1> Patient Information </h1>

<table class='table table-bordered'>
  <tbody>

    <tr>
      <td> <strong>First name:</strong> </td>
      <td> <%= @patient.first_name %> </td>
    <tr>

    <tr>
      <td> <strong>Middle name:</strong> </td>
      <td> <%= @patient.middle_name %> </td>
    </tr>

    <tr>
      <td> <strong>Last name:</strong> </td>
      <td> <%= @patient.last_name %> </td>
    </tr>

    <tr>
      <td> <strong>Weight:</strong> </td>
      <td> <%= @patient.weight %> </td>
    </tr>

    <tr>
      <td> <strong>Height:</strong> </td>
      <td> <%= @patient.height %> </td>
    </tr>

    <tr>
      <td> <strong>Mrn:</strong> </td>
      <td> <%= @patient.MRN %> </td>
    </tr>

  </tbody>
</table>

<%= link_to 'Edit', edit_patient_path(@patient), :class => "btn btn-warning" %> |
<%= link_to 'Back', patients_path, :class => "btn btn-default" %>

<br>

<h1> Patient Encounters </h1>

<%= link_to 'New Encounter', new_encounter_path, :class => "btn btn-primary" %>
<br><br>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Patient mrn</th>
      <th>Visit number</th>
      <th>Admitted at</th>
      <th>Discharged at</th>
      <th>Actions</th>
    </tr>
  </thead>
<% @patient.encounter.each do |encounter| %> 
  <tr>
        <td><%= encounter.patient_mrn %></td>
        <td><%= encounter.visit_number %></td>
        <td><%= encounter.admitted_at %></td>
        <td><%= encounter.discharged_at %></td>
        <td><%= link_to 'Show', encounter, :class => "btn btn-default" %> | 
        <%= link_to 'Edit', edit_encounter_path(encounter), :class => "btn btn-warning" %> | 
        <%= link_to 'Destroy', encounter, :class => "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
<% end %>
</table>
