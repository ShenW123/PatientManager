<p id="notice"><%= notice %></p>

<h1>Listing Encounters</h1>

<table>
  <thead>
    <tr>
      <th>Patient mrn</th>
      <th>Visit number</th>
      <th>Admitted at</th>
      <th>Discharged at</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encounters.each do |encounter| %>
      <tr>
        <td><%= encounter.patient_mrn %></td>
        <td><%= encounter.visit_number %></td>
        <td><%= encounter.admitted_at %></td>
        <td><%= encounter.discharged_at %></td>
        <td><%= link_to 'Show', encounter %></td>
        <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
        <td><%= link_to 'Destroy', encounter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

